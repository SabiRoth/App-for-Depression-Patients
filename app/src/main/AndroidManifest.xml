<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bachelorarbeit.bachelorarbeit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--TODO: Info über Backup durchlesen
        TODO: Icon ändern! -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- <service android:name=".BackgroundService" /> -->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="AppName"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".CalendarActivity"
            android:label="Kalender">
        </activity>

        <activity
            android:name=".ActivitiesActivity"
            android:label="Aktivitäten eingeben">
        </activity>

        <activity
            android:name=".GraphActivity"
            android:label="Verlauf">
        </activity>

        <activity
            android:name=".MapActivity"
            android:label="Kartenansicht">
        </activity>

        <activity
            android:name=".PlacesActivity"
            android:label="Orte tracken">
        </activity>

        <activity
            android:name=".SensitivitiesActivity"
            android:label="Befindlichkeiten eingeben">
        </activity>

        <service
            android:name=".BackgroundService"
            android:exported="false">
        </service>
    </application>

</manifest>