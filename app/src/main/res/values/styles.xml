<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="headerTextView_home" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorHeadings</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="button_home" parent="android:Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">55dp</item>
        <item name="android:layout_marginEnd">55dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="headerTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorHeadings</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerTextViewActivities" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorHeadings</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="nextButton" parent="android:Widget.Button">
        <item name="android:text">@string/next</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="saveButton" parent="android:Widget.Button">
        <item name="android:text">@string/save_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="deleteButton" parent="android:Widget.Button">
        <item name="android:text">@string/delete_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="listViewCalendar">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="hintTextView">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="hintTextViewCalendar">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="graphTextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="scoreTextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="spinner_textView">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="spinner">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="main_symptom_edittext">
        <item name="android:inputType">text</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="emergencyTextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="separationTextView">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:gravity">start</item>
        <item name="android:text">@string/separation</item>
    </style>
</resources>
