<?xml version="1.0" encoding="utf-8"?>
<!--<android.support.constraint.ConstraintLayout    -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <!--
    <include
        layout="@layout/app_bar"
    />
    -->

    <!--Textsize variabel!-->
    <!--Werte in values!-->
    <!--Buttonbreite je nach Inhaltsgröße: wrap content und margin entfernen-->

    <TextView
        android:id="@+id/textView_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overview_textview"
        android:visibility="visible"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorHeadings"
    />

    <Button
        android:id="@+id/button_overview_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_button"
        android:visibility="visible"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@mipmap/calendar_icon"
        android:drawablePadding="15sp"
    />


    <Button
       android:id="@+id/button_overview_graph"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/graph_button"
       android:textSize="25sp"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="50dp"
       android:drawableEnd="@mipmap/graph_icon"
       android:drawablePadding="15sp"
    />


    <TextView
        android:id="@+id/textView_entries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entries_textview"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorHeadings"
    />


    <Button
        android:id="@+id/button_sensitivies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sensitivies_button"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@mipmap/sensitivities_icon"
        android:drawablePadding="15sp"
    />


    <Button
        android:id="@+id/button_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activities_button"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@mipmap/activities_icon"
        android:drawablePadding="15sp"
    />


    <TextView
        android:id="@+id/textView_movementProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movementProfile_textview"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorHeadings"
    />


    <Button
        android:id="@+id/button_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/map_button"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@mipmap/maps_icon"
        android:drawablePadding="15sp"
    />



    <Button
        android:id="@+id/button_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/places_button"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@mipmap/tracking_icon"
        android:drawablePadding="15sp"
    />


<!-- </android.support.constraint.ConstraintLayout> -->
</LinearLayout>