<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <include layout="@layout/activity_calendar_header"/>

    <Button
        android:id="@+id/button_date_picker_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView_calendar_daily_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_daily_morning_textview"
        style="@style/normalText"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/textView_calendar_daily_midday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_daily_midday_textview"
        style="@style/normalText"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_midday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/textView_calendar_daily_evening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_daily_evening_textview"
        style="@style/normalText"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_evening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>