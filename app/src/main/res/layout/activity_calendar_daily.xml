<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_calendar_header"/>

    <Button
        android:id="@+id/button_date_picker_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView_calendar_daily_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_daily_morning_textview"
        style="@style/headerTextView"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_morning_sensivities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
         />
    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_morning_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />
    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_morning_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/textView_calendar_daily_midday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_daily_midday_textview"
        style="@style/headerTextView"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_midday_sensivities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_midday_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_midday_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/textView_calendar_daily_evening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_daily_evening_textview"
        style="@style/headerTextView"
        />

    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_evening_sensivities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />
    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_evening_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />
    <com.bachelorarbeit.bachelorarbeit.NonScrollListView
        android:id="@+id/listView_calendar_daily_evening_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>