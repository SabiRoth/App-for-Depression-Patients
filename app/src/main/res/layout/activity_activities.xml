<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_activities_header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actvitites1_textview"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>



        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />


        <TextView
            android:id="@+id/textView_activities_header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities2_textview"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>


        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textView_activities_header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities3_textview"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>


        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/button_activities_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textSize="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>


    </LinearLayout>

</ScrollView>