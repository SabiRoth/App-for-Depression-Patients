<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_activities_header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities1_textview"
            style="@style/headerTextView"/>


        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />


        <TextView
            android:id="@+id/textView_activities_header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities2_textview"
            style="@style/headerTextView"/>


        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textView_activities_header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities3_textview"
            style="@style/headerTextView"/>


        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textView_activities_headerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activitiesInput_textview"
            style="@style/headerTextView"/>

        <!--TODO ListView fÃ¼r eine Eingaben-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editText_activities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:hint="@string/activities_edittext"
                android:inputType="text"
                android:layout_marginStart="15dp"/>

            <Button
                android:id="@+id/saveButton_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/saveButton"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_activities_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/nextButton"
            />

    </LinearLayout>
</ScrollView>