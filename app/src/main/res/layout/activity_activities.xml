<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_activities_header_socail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities_social_textview"
            style="@style/headerTextView"/>

        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_activities_header_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities_sport_textview"
            style="@style/headerTextViewActivities"/>

        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_activities_header_relaxation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities_relaxation_textview"
            style="@style/headerTextViewActivities"/>

        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities_relaxation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_activities_header_obligations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activities_obligations_textview"
            style="@style/headerTextViewActivities"/>

        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities_obligations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_activities_headerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activitiesInput_textview"
            style="@style/headerTextViewActivities"/>

        <com.bachelorarbeit.bachelorarbeit.NonScrollListView
            android:id="@+id/listView_activities_own_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editText_activities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:hint="@string/activities_edittext"
                android:inputType="text"
                android:layout_marginStart="15dp"/>

            <Button
                android:id="@+id/saveButton_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/saveButtonSmall"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_activities_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/nextButton"/>

    </LinearLayout>
</ScrollView>